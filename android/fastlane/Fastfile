default_platform(:android)

platform :android do
  desc "Lane for Android Firebase App Distribution"
  
  lane :firebase_distribution do
    sh "flutter clean"
    sh "flutter pub get"
    sh "flutter build apk --release"  
    firebase_app_distribution(
      app: "1:432670175669:android:a524d8279167eda977e9fc",
      firebase_cli_token: ENV['FIREBASE_CLI_TOKEN'],
      android_artifact_type: "APK",
      android_artifact_path: "../build/app/outputs/apk/release/app-release.apk",
      testers: "amrgallam10@gmail.com,yttrexgchiiihgffv@gmail.com,mo.seliem2001@gmail.com",
      release_notes: "First Fastlane Firebase Distribution lnastaqim"
    )
  end
  
end

